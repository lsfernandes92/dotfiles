{
  "editor.tabSize": 2,
  "editor.padding.top": 30,
  "editor.padding.bottom": 30,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  // Alternative font family
  // "editor.fontFamily": "ModeSeven, Menlo, Monaco, Monolisa, 'Fira Code', 'Cascadia Code', Hack, monospace",
  "editor.fontFamily": "'Fira Code', Monolisa, 'Cascadia Code', Hack, Monaco, Menlo, monospace",
  "editor.fontSize": 18,
  "editor.rulers": [80, 120],
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "gutter",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "window.zoomLevel": 2.1,
  "workbench.colorTheme": "Best Themes - Xcode Fusion",

  // Terminal preferences
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontFamily": "Monaco, 'Fira Code', monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "bold",

  // General editor preferences
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.glyphMargin": false,
  "editor.lineHeight": 1.8,
  "editor.semanticHighlighting.enabled": false,
  "explorer.decorations.badges": false,
  "explorer.compactFolders": true,
  "github.copilot.editor.enableAutoCompletions": false,
  "liveServer.settings.port": 5555,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "security.workspace.trust.untrustedFiles": "open",
  "window.restoreWindows": "preserve",
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.activityBar.location": "hidden",
  "workbench.sideBar.location": "left",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.view.alwaysShowHeaderActions": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.layoutControl.enabled": false,

  "wakatime.apiKey": "<WAKATIME_API_KEY>",

  "custom-ui-style.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 16,
      "y": 8
    }
  },

  // Default formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // Custom CSS and JS Loader (extension)
  //
  // When styles changes, use the command palette (Cmd+Shift+P) to run
  // "Reload Custom CSS and JS" and then restart VSCode.
  "vscode_custom_css.imports": ["file:///${userHome}/.dotfiles/vscode/custom.css"],

  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, bun.lockb, nest*",
    "tailwind.config.js": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "workbench.editorAssociations": {
    "*.html": "default"
  },
  "redhat.telemetry.enabled": false,
  "git.autofetch": true,
  "gitlens.home.preview.enabled": false,
  "emmet.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "workbench.colorCustomizations": {},
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    }
  },
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:claude-3.5-sonnet",

  // Markdown PDF
  "markdown-pdf.headerTemplate": "\"\"",
  "markdown-pdf.footerTemplate": "\"\"",
  "markdown-pdf.styles": [
    "/Users/ritalee/Documents/desenv/vscode-extensions/markdown-pdf/blockquote-gap.css",
    "/Users/ritalee/Documents/desenv/vscode-extensions/markdown-pdf/custom.css"
  ],
  "gitlens.mode.active": "zen",
}
